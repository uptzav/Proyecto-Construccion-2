                </div>


            </div>

            <!-- TERMINA  el Contenido -->
        </div>
    </div>

    <script src="~/Scripts/js/demo.js"></script>
    <script src="~/Scripts/jquery-3.5.1.js"></script>

</body>

</html>


<script>

    $(document).ready(function () {
        listaDiagnostico();
    })

    function listaDiagnostico() {
      //  alert("hola");
        $.ajax({

            type: "GET",
            url: '/Diagnostico/Get_Diagnostico/',
            contentType: "application/json",
            success: function (data) {
                console.log(data);
                var rows = '';
                $.each(data, function (i, item) {
                    rows += "<tr>"

                    rows += "<td>" + item.temperaturaCorporal + "</td>"
                    rows += "<td>" + item.congestionNasal + "</td>"
                    rows += "<td>" + item.indigestionEstomacal + "</td>"
                    rows += "<td>" + item.tieneTos + "</td>"
                    rows += "<td>" + item.fatiga + "</td>"
                    rows += "<td>" + item.faltaAlimento + "</td>"
                    rows += "<td>" + item.perdidaGusto + "</td>"
                    rows += "<td> <button type='button' id='btnVer' class='btn btn-primary'  onClick='Detalle()'>Ver</td>"
                    rows += "</tr>";
                    $("#tabla tbody").html(rows);
                });
            }

        })
    }


</script>