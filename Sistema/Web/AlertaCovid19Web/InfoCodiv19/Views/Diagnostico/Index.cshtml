        <div class="main-panel">
            <div class="content">

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Casos</h6>
                    </div>
                    <div class="card-body">
                        <table id="tabla" class="table">
                            <thead>
                                <tr>
